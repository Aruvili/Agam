{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "agam",
    "scopeName": "source.agam",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#builtins"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.agam",
                    "match": "#.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.agam",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.agam",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.agam",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.agam",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.agam",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.agam",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.agam",
                    "match": "\\b(என்றால்|இல்லையென்றால்|இல்லை|வரை|ஒவ்வொரு|உள்ள|நிறுத்து|தொடர்|திரும்பு|பொருத்து|if|elif|else|while|for|in|break|continue|return|match)\\b"
                },
                {
                    "name": "keyword.declaration.agam",
                    "match": "\\b(செயல்|மாறி|மாறாத|கட்டமைப்பு|விருப்பம்|fn|let|const|struct|enum)\\b"
                },
                {
                    "name": "keyword.other.agam",
                    "match": "\\b(முயற்சி|பிடி|வீசு|இறக்குமதி|try|catch|throw|import)\\b"
                },
                {
                    "name": "constant.language.boolean.agam",
                    "match": "\\b(உண்மை|பொய்|true|false)\\b"
                },
                {
                    "name": "constant.language.null.agam",
                    "match": "\\b(இல்லா|null)\\b"
                },
                {
                    "name": "keyword.operator.logical.agam",
                    "match": "\\b(மற்றும்|அல்லது|இல்லாமல்|and|or|not)\\b"
                }
            ]
        },
        "builtins": {
            "patterns": [
                {
                    "name": "support.function.builtin.agam",
                    "match": "\\b(அச்சிடு|உள்ளீடு|நீளம்|வகை|print|input|len|type)\\b"
                },
                {
                    "name": "support.function.math.agam",
                    "match": "\\b(வர்க்கம்|அடி|தளம்|கூரை|முழுமை|குறைந்தபட்சம்|அதிகபட்சம்|தற்செயல்|கூட்டு|sqrt|pow|floor|ceil|abs|min|max|random|sum)\\b"
                },
                {
                    "name": "support.function.string.agam",
                    "match": "\\b(மேல்|கீழ்|ஒழுங்கு|பிரி|இணை|மாற்று|தொடங்கு|முடிவு|உள்ளதா|upper|lower|trim|split|join|replace|startswith|endswith|contains)\\b"
                },
                {
                    "name": "support.function.list.agam",
                    "match": "\\b(சேர்|நீக்கு|வரிசை|தலைகீழ்|வரம்பு|append|pop|sort|reverse|range)\\b"
                },
                {
                    "name": "support.function.type.agam",
                    "match": "\\b(எண்ணாக|தசமாக|சரமாக|int|float|str)\\b"
                },
                {
                    "name": "support.function.io.agam",
                    "match": "\\b(படி|எழுது|உள்ளது|வெளியேறு|read|write|exists|exit)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.agam",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.assignment.agam",
                    "match": "(=>|=)"
                },
                {
                    "name": "keyword.operator.arithmetic.agam",
                    "match": "(\\+|-|\\*|/|%)"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.agam",
                    "match": "\\b([அ-ஔக-ன][அ-ஔக-ன0-9_]*|[a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.agam",
                    "match": "\\b[அ-ஔக-ன][அ-ஔக-ன0-9_]*\\b"
                }
            ]
        }
    }
}